#	GOPHER DEFAULT CONFIGURATION rev1.0 - Auto generated by Gopher360
# If you want a fresh one, just DELETE THIS and re-run Gopher360
#	Set which controller buttons will activate the configuration events.
#	SET 0 FOR NO FUNCTION
#	AVAILABLE VALUES AT> https://msdn.microsoft.com/en-us/library/windows/desktop/microsoft.directx_sdk.reference.xinput_gamepad(v=vs.85).aspx
#	TIP: Sum the hex value for double button shortcuts eg. 0x0010(START) 0x0020(BACK) so 0x0030(START+BACK) will trigger the event only when both are pressed.


CONFIG_MOUSE_LEFT = 0x1000	# Left mouse button 		# XINPUT_GAMEPAD_A
CONFIG_MOUSE_RIGHT = 0x4000	# Right mouse button		# XINPUT_GAMEPAD_X
CONFIG_MOUSE_MIDDLE = 0x0040	# Middle mouse button		# XINPUT_GAMEPAD_LEFT_THUMB
CONFIG_DISABLE = 0x2001		# Disables the Gopher		# XINPUT_GAMEPAD_B + XINPUT_GAMEPAD_DPAD_UP
CONFIG_HIDE = 0x2002		# Hides the terminal		# XINPUT_GAMEPAD_B + XINPUT_GAMEPAD_DPAD_DOWN
CONFIG_DISABLE_VIBRATION = 0x2004 # Disables Gopher Vibrations	# XINPUT_GAMEPAD_B + XINPUT_GAMEPAD_DPAD_LEFT
CONFIG_SPEED_CHANGE =  0x2008	# Change speed			# XINPUT_GAMEPAD_B + XINPUT_GAMEPAD_DPAD_RIGHT


#	KEYBOARD SHORTCUTS ON CONTROLLER BUTTONS
#	SET 0 FOR NO FUNCTION
#	AVAILABLE VALUES AT> https://msdn.microsoft.com/en-us/library/windows/desktop/dd375731


GAMEPAD_DPAD_UP = 0x26		# UP ARROW key
GAMEPAD_DPAD_DOWN = 0x28	# DOWN ARROW key
GAMEPAD_DPAD_LEFT = 0x25	# LEFT ARROW key
GAMEPAD_DPAD_RIGHT = 0x27	# RIGHT ARROW key
GAMEPAD_START = 0xA8		# Browser Refresh key
GAMEPAD_BACK = 0x1B		# ESC key
GAMEPAD_LEFT_THUMB = 0		# Middle Mouse Click
GAMEPAD_RIGHT_THUMB = 0xAD	# Volume Mute key
GAMEPAD_LEFT_SHOULDER = 0x11	# CTRL Key
GAMEPAD_RIGHT_SHOULDER = 0x5B	# Left Windows key (Natural keyboard)
