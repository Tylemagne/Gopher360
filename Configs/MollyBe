GAMEPAD_B = 0x10		# SHIFT key		# Control Gopher
GAMEPAD_X = 0			# Right Mouse Click
GAMEPAD_Y = 0x0D		# ENTER key
GAMEPAD_TRIGGER_LEFT = 0x12	# ALT Key
GAMEPAD_TRIGGER_RIGHT = 0x09	# TAB key

